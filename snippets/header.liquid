<div id="header-global">

    <a href="/">
        {% assign shop_title = 'general.shop.title' | t %}
        {% include 'inline-icon' with svg: 'logo.svg', alt: shop_title, class: 'logo-main' %}
    </a>

    <!-- site wide nav links  -->
    {% include 'nav-list', handle: 'main-menu' %}

    <a href="/search">
        Search
        {% include 'inline-icon' with svg: 'icon-search.svg'%}
    </a>

    {% include 'currency-picker' %}

    <a class="js-cart-link" href="/cart">
        {{ 'cart.button.count_html' | t: itemCount: cart.item_count }}
    </a>

</div>
<!-- end header global -->