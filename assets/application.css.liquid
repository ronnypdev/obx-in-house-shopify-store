/**
====================================
    ==> Base Partial <==
====================================
*/
* {
  font-family: "Courier New", Courier, monospace;
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  margin: 0;
  padding: 0;
  color: #000000;
  line-height: 20px;
}

body {
  font-size: 13px;
  background-color: #ffffff;
  background-size: 100%;
  background-attachment: fixed;
  background-repeat: no-repeat;
  padding-top: 140px;
}

/**
====================================
    ==> Styleguide Partial <==
====================================
*/
h1,
.h1,
h2,
.h2,
h3,
.h3 {
  font-family: "Georgia", "Times New Roman", Times, serif;
  font-weight: 700;
  color: #333333;
}

h1,
.h1 {
  font-size: 40px;
  line-height: 40px;
}

h2,
.h2 {
  font-size: 20px;
  line-height: 20px;
}

h3,
.h3 {
  font-size: 13px;
  line-height: 20px;
}

a {
  text-decoration: none;
  color: #555555;
}
a:hover {
  color: #000000;
}

.link-logo {
  font-size: 55px;
}

.text-link {
  font-family: "Courier New", Courier, monospace;
  color: #555555;
  fill: currentColor;
}
.text-link:hover {
  color: #000000;
}

button[type=submit],
.button {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  display: inline-block;
  width: 100%;
  padding: 20px;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  background: #000000;
  color: #ffffff;
}
button[type=submit]:disabled,
.button:disabled {
  opacity: 0.75;
  cursor: not-allowed;
  text-decoration: line-through;
}
button[type=submit]:not(:disabled):hover,
.button:not(:disabled):hover {
  background: black;
}

.styled-select {
  position: relative;
  color: #555555;
}
.styled-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  font-family: "Courier New", Courier, monospace;
  font-size: 13px;
  line-height: 20px;
  color: currentColor;
  padding-right: 20px;
  width: 100%;
}
.styled-select .inline-icon {
  position: absolute;
  top: 0;
  right: 0;
  pointer-events: none;
  font-size: 0.65em;
}
.text-white .styled-select {
  color: #aaaaaa;
}
.text-white .styled-select:hover {
  color: #ffffff;
}

/**
====================================
    ==> Utilities Partial <==
====================================
*/
.visually-hidden {
  position: absolute !important;
  height: 1px;
  width: 1px;
  overflow: hidden;
  clip: rect(1px 1px 1px 1px);
  clip: rect(1px, 1px, 1px, 1px);
}

.wrapper {
  padding-left: 40px;
  padding-right: 40px;
}

.grid {
  display: grid;
  grid-column-gap: 40px;
  grid-row-gap: 40px;
}
.grid > * {
  min-width: 0;
  min-height: 0;
}
.grid.collapse {
  grid-column-gap: 0;
  grid-row-gap: 0;
}

.two-columns {
  grid-template-columns: 1fr 1fr;
}

.valign-center {
  display: flex;
  flex-direction: column;
}
.valign-center > *:first-child {
  margin-top: auto;
}
.valign-center > *:last-child {
  margin-bottom: auto;
}

.ta-center {
  text-align: center;
}

.text-white {
  color: #ffffff;
}
.text-white h1,
.text-white .h1,
.text-white h2,
.text-white .h2,
.text-white h3,
.text-white .h3,
.text-white h4,
.text-white .h4 {
  color: #ffffff;
}
.text-white p,
.text-white .accent-color {
  color: #cccccc;
}
.text-white a {
  color: #ffffff;
}
.text-white a:hover {
  color: #ffffff;
}

/**
====================================
    ==> Inline Icon Partial <==
====================================
*/
.inline-icon {
  display: inline-block;
  vertical-align: middle;
  fill: currentColor;
  width: 1em;
}
.inline-icon svg {
  fill: inherit;
  max-width: 100%;
  max-height: 100%;
}
.inline-icon svg g,
.inline-icon svg path {
  fill: inherit;
}
.inline-icon.current-color-stroke {
  stroke: currentColor;
  fill: none;
}
.inline-icon.current-color-stroke svg,
.inline-icon.current-color-stroke g,
.inline-icon.current-color-stroke path {
  fill: none;
  stroke: inherit;
}

