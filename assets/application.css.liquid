/**
====================================
    ==> Base Partial <==
====================================
*/
* {
  font-family: "Courier New", Courier, monospace;
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  margin: 0;
  padding: 0;
  color: #000000;
  line-height: 20px;
}

body {
  font-size: 13px;
  background-color: #ffffff;
  background-size: 100%;
  background-attachment: fixed;
  background-repeat: no-repeat;
  padding-top: 100px;
}

img {
  max-width: 100%;
  height: auto;
}

/**
====================================
    ==> Style guide Partial <==
====================================
*/
h1,
.h1,
h2,
.h2,
h3,
.h3 {
  font-family: "Georgia", "Times New Roman", Times, serif;
  font-weight: 700;
  color: #333333;
}

h1,
.h1 {
  font-size: 40px;
  line-height: 40px;
}

h2,
.h2 {
  font-size: 20px;
  line-height: 20px;
}

h3,
.h3 {
  font-size: 13px;
  line-height: 20px;
}

p {
  font-family: "Courier New", Courier, monospace;
  font-size: 13px;
  line-height: 20px;
}

.p-large, #page-product .description p {
  font-family: "Courier New", Courier, monospace;
  font-size: 31px;
  line-height: 40px;
}

a {
  text-decoration: none;
  color: #555555;
}
a:hover {
  color: #000000;
}

.link-logo {
  font-size: 55px;
}

.text-link {
  font-family: "Courier New", Courier, monospace;
  color: #555555;
  fill: currentColor;
}
.text-link:hover {
  color: #000000;
}

button[type=submit],
.button {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  display: inline-block;
  width: 100%;
  padding: 10px 20px;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  background: #000000;
  color: #ffffff;
}
button[type=submit]:disabled,
.button:disabled {
  opacity: 0.75;
  cursor: not-allowed;
  text-decoration: line-through;
}
button[type=submit]:not(:disabled):hover,
.button:not(:disabled):hover {
  background: black;
}
button[type=submit].button-cta,
.button.button-cta {
  padding: 20px;
}

.styled-select {
  position: relative;
  color: #555555;
}
.styled-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  font-family: "Courier New", Courier, monospace;
  font-size: 13px;
  line-height: 20px;
  color: currentColor;
  padding-right: 20px;
  width: 100%;
}
.styled-select .inline-icon {
  position: absolute;
  top: 0;
  right: 0;
  pointer-events: none;
  font-size: 0.65em;
}
.text-white .styled-select {
  color: #aaaaaa;
}
.text-white .styled-select:hover {
  color: #ffffff;
}

/**
====================================
    ==> Utilities Partial <==
====================================
*/
.visually-hidden, #page-product .variant-radio {
  position: absolute !important;
  height: 1px;
  width: 1px;
  overflow: hidden;
  clip: rect(1px 1px 1px 1px);
  clip: rect(1px, 1px, 1px, 1px);
}

.wrapper {
  padding-left: 40px;
  padding-right: 40px;
}

.grid {
  display: grid;
  grid-column-gap: 40px;
  grid-row-gap: 40px;
}
.grid > * {
  min-width: 0;
  min-height: 0;
}
.grid.collapse {
  grid-column-gap: 0;
  grid-row-gap: 0;
}

.two-columns {
  grid-template-columns: 1fr 1fr;
}

.valign-center {
  display: flex;
  flex-direction: column;
}
.valign-center > *:first-child {
  margin-top: auto;
}
.valign-center > *:last-child {
  margin-bottom: auto;
}

.ta-center {
  text-align: center;
}

.text-white {
  color: #ffffff;
}
.text-white h1,
.text-white .h1,
.text-white h2,
.text-white .h2,
.text-white h3,
.text-white .h3,
.text-white h4,
.text-white .h4 {
  color: #ffffff;
}
.text-white p,
.text-white .accent-color {
  color: #cccccc;
}
.text-white a {
  color: #ffffff;
}
.text-white a:hover {
  color: #ffffff;
}

/**
====================================
    ==> Inline Icon Partial <==
====================================
*/
.inline-icon {
  display: inline-block;
  vertical-align: middle;
  fill: currentColor;
  width: 1em;
}
.inline-icon svg {
  fill: inherit;
  max-width: 100%;
  max-height: 100%;
}
.inline-icon svg g,
.inline-icon svg path {
  fill: inherit;
}
.inline-icon.current-color-stroke {
  stroke: currentColor;
  fill: none;
}
.inline-icon.current-color-stroke svg,
.inline-icon.current-color-stroke g,
.inline-icon.current-color-stroke path {
  fill: none;
  stroke: inherit;
}

/**
====================================
    ==> Header Partial <==
====================================
*/
#header-global {
  width: 100%;
  height: 100px;
  position: fixed;
  top: 0;
  left: 0;
  padding: 40px;
  background: #ffffff;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
#header-global .link-logo {
  font-size: 55px;
  color: #000000;
}

.header-nav-list {
  margin-left: 20px 40px;
  display: inline-block;
}
.header-nav-list li {
  display: inline-block;
}
.header-nav-list li:not(:first-of-type) {
  margin-left: 20px;
}
.header-nav-list .text-link {
  color: #333333;
}
.header-nav-list .text-link:hover {
  color: #000000;
}

.header-right {
  margin-top: 18px;
}
.header-right > * {
  display: inline-block;
}
.header-right > *:not(:first-child) {
  margin-left: 20px;
}

.cart-link .cart-item-count {
  display: inline-block;
  background-color: #555555;
  min-width: 20px;
  height: 20px;
  border-radius: 10px;
  text-align: center;
  color: #ffffff;
  padding-top: 1px;
}
.cart-link:hover .cart-item-count {
  background-color: #000000;
}

/**
====================================
    ==> Footer Partial <==
====================================
*/
#footer-global {
  margin-top: 100px;
}
#footer-global .footer-image-band {
  height: 300px;
  background-image: url('{{ "hero-stitch.jpg" | asset_img_url: "master" }}');
  background-size: cover;
}
#footer-global .footer-inner {
  width: 100%;
  height: 100px;
  background: #000000;
  padding: 20px 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
#footer-global .nav-list {
  display: inline-block;
}
#footer-global .nav-list li {
  display: inline-block;
}
#footer-global .nav-list li:not(:first-of-type) {
  margin-left: 20px;
}
#footer-global .nav-list:not(:first-of-type) {
  margin-left: 20px;
}
#footer-global .secondary-menu-list .text-link:not(:hover) {
  color: #aaaaaa;
}
#footer-global .footer-right {
  margin-top: 18px;
}
#footer-global .footer-right > * {
  display: inline-block;
}
#footer-global .footer-right > *:not(:first-child) {
  margin-left: 20px;
}
.template-index #footer-global, .template-404 #footer-global, .template-product #footer-global, .template-search #footer-global {
  margin-top: 0;
}

#mini-cart {
  display: none;
}

html.mini-cart-open #mini-cart {
  display: block;
}
html.mini-cart-open main {
  opacity: 0.3;
}

/**
====================================
    ==> Option Color Partial <==
====================================
*/
.option-color {
  display: inline-block;
  width: 20px;
  height: 20px;
  position: relative;
}
.option-color .option-color-inner,
.option-color .color-swatch {
  width: 100%;
  height: 100%;
  display: block;
}
.option-color .option-color-inner:after {
  content: "";
  display: block;
  position: absolute;
  top: -5px;
  bottom: -5px;
  left: -5px;
  right: -5px;
  border: 1px solid #707070;
  pointer-events: none;
  border-radius: 100%;
  opacity: 0;
}
.option-color .color-swatch {
  border-radius: 100%;
}
.option-color.color-white .color-swatch {
  border: 1px solid rgba(0, 0, 0, 0.5);
}
input[type=radio]:not(:checked):hover + label .option-color .option-color-inner:after {
  opacity: 1;
}
input[type=radio]:checked + label .option-color .option-color-inner:after {
  opacity: 1;
  border-color: #333333;
}

/**
====================================
    ==> Product Card Partial <==
====================================
*/
.product-card .link-to-product,
.product-card img {
  display: block;
}
.product-card .card-info {
  margin-top: 20px;
}
.product-card .product-price {
  color: #000000;
  text-align: right;
}
.product-card .card-info-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/**
====================================
    ==> Collection Partial <==
====================================
*/
#page-collection #collection-image {
  height: 33vh;
  min-height: 250px;
  max-height: 800px;
}
#page-collection #collection-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
#page-collection .collection-content {
  padding-top: 40px;
  grid-template-columns: repeat(12, 1fr);
}
#page-collection .collection-sidebar {
  grid-column: span 2;
  grid-row: 1;
}
#page-collection .product-card:nth-of-type(odd) {
  grid-column: 3/7;
}
#page-collection .product-card:nth-of-type(even) {
  grid-column: 7/11;
}
