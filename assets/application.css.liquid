  height: 100px;
  position: fixed;
  top: 0;
  left: 0;
  padding: 40px;
  background: #ffffff;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
#header-global .link-logo {
  font-size: 55px;
  color: #000000;
}

.header-nav-list {
  margin-left: 20px 40px;
  display: inline-block;
}
.header-nav-list li {
  display: inline-block;
}
.header-nav-list li:not(:first-of-type) {
  margin-left: 20px;
}
.header-nav-list .text-link {
  color: #333333;
}
.header-nav-list .text-link:hover {
  color: #000000;
}

.header-right {
  margin-top: 18px;
}
.header-right > * {
  display: inline-block;
}
.header-right > *:not(:first-child) {
  margin-left: 20px;
}

.cart-link .cart-item-count {
