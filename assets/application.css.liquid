  margin-top: 20px;
  color: #555555;
}
#page-product .product-actions {
  grid-column: 7/11;
}
#page-product .product-title {
  margin-top: 20px;
}
#page-product #add-to-cart-form {
  margin-top: 40px;
}
#page-product .product-option-row {
  padding: 20px 0;
  border-top: 1px solid rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
#page-product .product-option-row:last-of-type {
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
}
#page-product .styled-select select {
  text-align-last: right;
}
#page-product .styled-select select:not(:hover) {
  color: #333333;
}
#page-product .variant-radio + label {
  display: inline-block;
  cursor: pointer;
  color: #555555;
}
#page-product .variant-radio:checked + label {
  color: #000000;
}
#page-product .variant-radio:disabled {
  cursor: not-allowed;
  opacity: 0.5;
}
#page-product .variant-radio:not(:first-of-type) + label {
  margin-left: 5px;
}
#page-product #add-to-cart-button {
  margin-top: 20px;
}
#page-product #product-bottom {
  padding-top: 60px;
  padding-bottom: 60px;
  grid-template-columns: repeat(12, 1fr);
  grid-row: 100px;
}
#page-product .info-section h3 {
  margin-bottom: 20px;
}
#page-product .description {
  grid-column: 3/11;
}
#page-product .shipping h3,
#page-product .returns h3 {
  color: #555555;
}
#page-product .shipping {
  grid-column: 3/7;
  grid-row: 2;
}
#page-product .returns {
  grid-column: 7/11;
  grid-row: 2;
}